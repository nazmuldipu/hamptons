<section class="segment-outer pt-16 xmed:pt-24 mb-16 pb-10 bg-violet">
    <section class="segment-inner px-4 pt-4 xmed:pt-16">
        <figcaption>
            <h2 class="text-5xl text-center pb-2 mb-1">A hidden gem for the <br>modern explorer</br>
            </h2>
        </figcaption>
        <figure class="max-w-hero-width mx-auto">
            <picture>
                <source src="images/amenities-1.webp" type="image/webp" srcset="
                    images/amenities-1.webp 600w,
                    images/amenities-1_300.webp 300w
                ">
                <img src="images/amenities-1.jpg" class="inline-block" alt="A hidden gem for the modern explorer" srcset="
                    images/amenities-1.jpg 600w,
                    images/amenities-1.jpg 300w
                ">
            </picture>
        </figure>
        <article class="max-w-2xl m-auto">
            <header>
                <h1 class="font-hijrnotes text-6xl text-center">
                    enjoy the journey
                </h1>
                <h4 class="xmed:hidden text-center text-2xl">
                    Our special aminities
                </h4>
            </header>
            <div class="xmed:hidden flex justify-center my-16">
                <img src="/images/amenities-1.svg">
            </div>
            <p class="text-center pt-4">
                Sometimes all you need is to escape from the city, enjoy the nature, absorve the sun, and feel the sea breeze.We offer a variety of amenities to enhance your stay.
            </p>
        </article>
    </section>
</section>

{% for item in imagePanels %}
    <section class="segment-outer pb-16">
        <section class="segment-inner xmed:grid grid-cols-2 gap-x-16 xmed:py-16 items-center {{ item.backgroundColor }}">
            <figure class="xmed:justify-end {{ item.figureOrder }}">
                <picture>
                    <source src="{{ item.imageUrl }}.webp" type="image/webp" srcset="
                    {{ item.imageUrl }}.webp 600w,
                    {{ item.imageUrl }}_300.webp 300w
                ">
                    <img class="w-full" src="{{ item.imageUrl }}.jpg" class="inline-block" alt="the lawn">
                </picture>
            </figure>
            <figcaption class="text-justify px-8 xmed:px-16 py-8 xmed:py-0 xmed:justify-start {{ item.figcaptionOrder}}">
                <header class="font-hijrnotes text-4xl pb-6">{{ item.title }}</header>
                <p>{{ item.p1 }}</p>
            </figcaption>
        </section>
    </section>
{% endfor %}

