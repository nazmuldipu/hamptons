<!-- Picture macro -->
{% macro pictureImg(name, parentClass, childClass)%}
    <picture class="{{parentClass}}">
        <source
      src="images/{{name}}.webp"
      type="image/webp"
      srcset="images/{{name}}.webp 900w, images/{{name}}_640.webp 640w"
/>
        <img
      src="images/{{name}}.png"
      class="{{childClass}}"
      alt="{{name}}"
      srcset="images/{{name}}.png 900w, images/{{name}}.png 640w"
/>
    </picture>
</picture>
{% endmacro %}

{% macro subheader(figcaption = '', imageUrl = '', imageAlt = '', imageType = '') %}
    <section class="segment-outer pt-16 xmed:pt-24 xmed:pb-10 bg-violet">
        <section class="segment-inner px-4 pt-4 xmed:pt-16">
            <figcaption>
                <h2 class="text-2xl xmed:text-5xl max-w-subheader__caption xmed:max-w-2xl m-auto text-center pb-2 mb-1">
                    {{ figcaption }}
                </h2>
            </figcaption>
            <figure class="max-w-hero-width mx-auto">
                <picture>
                    <source src="images/{{imageUrl}}.webp" type="image/webp" srcset="
                    images/{{imageUrl}}.webp 600w,
                    images/{{imageUrl}}_300.webp 300w
                ">
                    <img src="images/offers-1.{{imageType}}" class="inline-block" alt="{{imageAlt}}" srcset="
                    images/{{imageUrl}}.{{imageType}} 600w,
                    images/{{imageUrl}}.{{imageType}} 300w
                ">
                </picture>
            </figure>
        </section>
    </section>
{% endmacro %}
